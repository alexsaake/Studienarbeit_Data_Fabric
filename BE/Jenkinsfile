pipeline {
    agent {
      docker {
            image 'maven:3.8.3-openjdk-17'
            args '-p 8443:8443'
      }
    }
    stages {

        stage('Version') {
            steps {
                sh 'mvn --version'
            }
        }

        stage("Compilation") {
           steps {
                dir('BE/') {
                    sh "mvn clean install -DskipTests"
                }
            }
        }
        stage("Spring-Boot:Run") {
            steps {
                  dir('BE/') {
                      sh "mvn spring-boot:run"
                  }
             }
         }
    }
}