pipeline {
    agent {
      docker { image 'openjdk:17-jdk-alpine' }
    }
    tools {
        maven 'autoinstalled maven'
    }
    stages {

        stage('Version') {
            steps {
                sh 'mvn --version'
            }
        }

        stage("Compilation") {
           steps {
                dir('BE/') {
                    sh "mvn clean install -DskipTests"
                }
            }
        }
        stage("Spring-Boot:Run") {
            steps {
                  dir('BE/') {
                      sh "mvn spring-boot:run"
                  }
             }
         }
    }
}