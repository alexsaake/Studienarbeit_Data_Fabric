pipeline {
    agent any
    tools {
        maven 'autoinstalled maven'
    }
    stages {

        stage('build') {
            steps {
                sh 'mvn --version'
            }
        }

        stage("Compilation") {
           steps {
                sh "mvn clean install -DskipTests"
            }
        }
        stage("Tests and Deployment") {
/*             steps {
                echo 'Runing unit tests'
                //sh "./mvnw test -Punit"
             } */
            steps {
                echo 'Deployment'
                sh 'mvn spring-boot:run'
             }
         }
    }
}